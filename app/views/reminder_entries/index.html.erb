<h2>Reminder e-mails</h2>

<%= link_to "New Reminder", new_project_reminder_entry_path %>

<% if @reminder_entries.blank? %>
  <p>There are not any reminders for this project.</p>
<% else %>
  <p>These are the current reminders:</p>
  <table border="1">
    <thead>
      <tr>
        <th>Tracker</th>
        <th>Days</th>
        <th>Environment</th>
        <th>Users</th>
        <th>Actions</th>
      </tr>
    </thead>

    <% @reminder_entries.each do |reminder_entry| %>
      <tr>
        <td> <%= getReminderTrackerName(reminder_entry.tracker_id) %> </td>
        <td> <%= reminder_entry.days %> </td>
        <td> <%= reminder_entry.env %> </td>
        <td> <%= getReminderUserNames(reminder_entry.id) %> </td>
        <td>
          <%= button_to "Send now", project_reminder_entry_send_path(:reminder_entry_id => reminder_entry.id) %>
          <%= button_to "Delete", project_reminder_entry_path(:id => reminder_entry.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>
